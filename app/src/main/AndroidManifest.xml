<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="xyz.hisname.fireflyiii">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <uses-permission
        android:name="android.permission.GET_ACCOUNTS"
        android:maxSdkVersion="22" />
    <uses-permission
        android:name="android.permission.MANAGE_ACCOUNTS"
        android:maxSdkVersion="22" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

    <application
        android:name=".CustomApp"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme.StartUpTheme">

        <activity android:name=".ui.onboarding.OnboardingActivity"
            android:launchMode= "singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="${host}"
                    android:scheme="http" />
            </intent-filter>
        </activity>

        <receiver android:name=".ui.widgets.BalanceWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/balance_widget_info" />
        </receiver>

       <receiver android:name=".ui.widgets.BillsToPayWidget">
             <intent-filter>
                 <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
             </intent-filter>
             <meta-data
                 android:name="android.appwidget.provider"
                 android:resource="@xml/bills_widget_info" />
         </receiver>

        <activity
            android:name=".ui.HomeActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
            </intent-filter>
            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
        <activity
            android:name=".ui.transaction.addtransaction.AddTransactionActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <receiver android:name=".receiver.TransactionReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="firefly.hisname.ADD_DEPOSIT"/>
                <action android:name="firefly.hisname.ADD_WITHDRAW"/>
                <action android:name="firefly.hisname.ADD_TRANSFER"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".receiver.BillReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="firefly.hisname.ADD_BILL"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".receiver.PiggyBankReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="firefly.hisname.ADD_PIGGY_BANK" />
            </intent-filter>
        </receiver>

        <receiver android:name=".GenericReceiver">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <service android:name=".service.FireflyAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <service
            android:name=".service.TransactionTilesService"
            android:icon="@drawable/ic_refresh"
            android:label="@string/transaction"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

    </application>



</manifest>
