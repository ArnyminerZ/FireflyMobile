<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Account">
        <Preference
            app:key="logout"
            app:title="Logout" />

        <Preference
            app:key="account_more_options"
            app:title="More Options" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Themes">
        <Preference
            app:key="themes_settings"
            app:title="Configure App Theming" />
    </PreferenceCategory>

    <PreferenceCategory
        app:title="Transaction"
        app:summary="Add Transaction anytime anywhere">

        <CheckBoxPreference
            app:key="persistent_notification"
            app:title="Show Notification Shortcut">
        </CheckBoxPreference>

    </PreferenceCategory>

</PreferenceScreen>