<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="Account">

        <EditTextPreference
            app:key="fireflyUrl"
            app:title="Firefly URL">
        </EditTextPreference>

        <EditTextPreference
            app:key="access_token"
            app:title="Access Token">
        </EditTextPreference>

        <SwitchPreference
            app:key="enable_cert_pinning"
            app:title="Enable Certificate Pinning">
        </SwitchPreference>

        <EditTextPreference
            app:key="cert_value"
            app:title="Certificate Pinning Hash Value"
            app:useSimpleSummaryProvider="true"
            app:dependency="enable_cert_pinning">

        </EditTextPreference>

        <Preference
            app:key="auth_method"
            app:title="Authentication Method">
        </Preference>

        <Preference
            app:key="refresh_token"
            app:title="Refresh Token"
            app:summary="Click here to refresh your token">
        </Preference>

        <Preference
            app:key="logout"
            app:title="Logout">
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Transaction"
        app:summary="Add Transaction anytime anywhere">

        <CheckBoxPreference
            app:key="persistent_notification"
            app:title="Show Notification Shortcut">
        </CheckBoxPreference>

    </PreferenceCategory>

</PreferenceScreen>