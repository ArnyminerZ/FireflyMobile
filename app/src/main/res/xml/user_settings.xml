<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        app:key="account_options"
        app:title="@string/account" />

    <ListPreference
        app:title="@string/language"
        app:key="language_pref"
        app:entries="@array/language_string"
        app:summary="%s"
        app:entryValues="@array/language_values"/>

    <Preference
        app:key="transaction_settings"
        app:title="Transaction Settings" />

    <CheckBoxPreference
        app:key="night_mode"
        app:title="Enable Night Mode" />

    <CheckBoxPreference
        app:key="keyguard"
        app:title="Activate System's Keyguard on Launch" />

</PreferenceScreen>